@{
    ViewData["Title"] = "Data uploder";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="UpdateUploadDetails" method="post" class="mt-4">
        <div class="mb-3">
            <label for="fromServer" class="form-label">From Server Name</label>
            <input type="text" class="form-control" id="fromServer" name="fromServer" placeholder="Enter source server">
        </div>
        <div class="mb-3">
            <label for="toServer" class="form-label">To Server Name</label>
            <input type="text" class="form-control" id="toServer" name="toServer" placeholder="Enter target server">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>

    @if (ViewBag.UserDetailsMessage != null)
    {
        <div class="alert alert-success mt-3">
            @ViewBag.UserDetailsMessage
        </div>
    }
</div>
